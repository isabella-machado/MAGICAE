<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundosele"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtEmailLog2"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:foreground="@drawable/container_components"
        android:inputType="textEmailAddress"
        android:text="Pesquisar..."
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="71dp"
        android:layout_height="96dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/autismo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPesquisar"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Pesquisar..."
        app:layout_constraintBottom_toBottomOf="@+id/edtEmailLog2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtEmailLog2" />

    <ImageView
        android:id="@+id/ivJogoMemoria"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailLog2"
        app:srcCompat="@drawable/jogomemoria" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:text="Jogo da MemÃ³ria"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivJogoMemoria" />

</androidx.constraintlayout.widget.ConstraintLayout>